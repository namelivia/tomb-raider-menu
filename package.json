  ],
  "author": "namelivia <jignacio.amelivia@gmail.com>",
  "license": "GPL2",
  "bugs": {
    "url": "https://github.com/namelivia/tombraider.js/issues"
  },
  "homepage": "https://github.com/namelivia/tombraidermenu.js",
  "devDependencies": {
    "esbuild": "^0.11.0",
    "esbuild-jest": "^0.5.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1"
